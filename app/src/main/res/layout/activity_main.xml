<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbg"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        
   <ImageView
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Unleash the power of AI-driven conversations with ChatGPT - where human ingenuity meets artificial intelligence."
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/white"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:weightSum="2"
    android:layout_marginHorizontal="14dp"
    android:baselineAligned="false"
    android:layout_marginTop="40dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/chatWithBot"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/mainbtn">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/online_chat"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Chat with Bot"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/generateImage"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="8dp"
         android:layout_weight="1"
        android:background="@drawable/mainbtn">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/online_chat"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Generate Image"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/surprise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="false"
        app:lottie_speed="1"
        app:lottie_fileName="gift.json"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        />
</LinearLayout>